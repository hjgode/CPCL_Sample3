<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout 
	    android:id="@+id/LinearLayout01" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
   		<CheckBox
		    android:text="@string/dev_check_disconnect" 
            android:id="@+id/check_disconnect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
	</LinearLayout>
   	<LinearLayout 
	    android:id="@+id/LinearLayout02" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
		<!-- Divide | EditText | Button | -->
	    <EditText 
	        android:id="@+id/EditTextAddressBT" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_weight="1" 
		    android:inputType="text"/>
		<Button 
		    android:text="@string/dev_conn_btn" 
		    android:id="@+id/ButtonConnectBT" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_weight="2"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/LinearLayout03" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
		<Button 
		    android:text="@string/bt_search_btn" 
		    android:id="@+id/ButtonSearchBT" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/LinearLayout04" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
		<ListView 
		    android:id="@+id/BtAddrListView" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>